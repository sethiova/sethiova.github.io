<style>
  /* Hero Specifics */
  .hero-section {
    min-height: 50vh;
    display: flex;
    align-items: center;
    padding-top: 120px; /* Offset for fixed nav */
    padding-bottom: 4rem;
  }

  .badge {
    background: rgba(139, 92, 246, 0.1);
    color: var(--color-primary);
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    display: inline-block;
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .cta-group {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  /* Code Mockup */
  .code-block-mockup {
    background: #0d1117;
    border: 1px solid #30363d;
    border-radius: 1rem;
    padding: 1.5rem;
    font-family: "Fira Code", monospace;
    font-size: 0.9rem;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    position: relative;
  }

  .code-block-mockup::before {
    content: "";
    display: block;
    width: 60px;
    height: 12px;
    background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 60 12"><circle cx="6" cy="6" r="6" fill="%23ff5f56"/><circle cx="26" cy="6" r="6" fill="%23ffbd2e"/><circle cx="46" cy="6" r="6" fill="%2327c93f"/></svg>')
      no-repeat;
    margin-bottom: 1rem;
  }

  pre {
    margin: 0;
  }
  .keyword {
    color: #ff7b72;
  }
  .variable {
    color: #d2a8ff;
  }
  .property {
    color: #79c0ff;
  }
  .string {
    color: #a5d6ff;
  }

  /* Experience Cards */
  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .company {
    font-weight: 700;
    font-size: 1.1rem;
  }

  .date {
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .tags {
    list-style: none;
    padding: 0;
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .tags li,
  .tech-tag {
    background: rgba(255, 255, 255, 0.05);
    padding: 0.25rem 0.75rem;
    border-radius: 1rem;
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  /* Project Cards */
  .project-card {
    /* height: 100%; removed to prevent overflow */
    display: flex;
    flex-direction: column;
  }

  .project-content {
    display: flex;
    flex-direction: column;
    flex: 1;
    height: 100%;
  }

  .project-meta {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    margin-top: auto; /* Pushes meta to bottom */
    flex-wrap: wrap;
  }

  .link-arrow {
    font-weight: 600;
    font-size: 0.9rem;
    display: inline-block;
    margin-top: 1rem;
  }

  /* Profile Image */
  .relative-container {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .profile-image {
    width: 350px;
    height: 350px;
    border-radius: 20px;
    object-fit: cover;
    z-index: 10;
    position: relative;
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 0 40px rgba(139, 92, 246, 0.3);
    transition: transform 0.3s ease;
  }

  .profile-image:hover {
    transform: scale(1.02);
  }

  .glow-effect {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 360px;
    height: 360px;
    background: radial-gradient(
      circle,
      rgba(139, 92, 246, 0.4) 0%,
      rgba(0, 0, 0, 0) 70%
    );
    z-index: 1;
    filter: blur(20px);
  }

  /* About Section */
  .bg-dim {
    background: rgba(15, 23, 42, 0.3);
  }

  .about-wrapper {
    align-items: flex-start;
  }

  .about-text p {
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  .objective-card {
    background: linear-gradient(
      145deg,
      rgba(30, 41, 59, 0.9),
      rgba(15, 23, 42, 0.95)
    );
    border: 1px solid rgba(139, 92, 246, 0.2);
  }

  .stat-row {
    display: flex;
    gap: 3rem;
    margin-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding-top: 2rem;
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat .number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .stat .label {
    font-size: 0.9rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 768px) {
    .mobile-reverse {
      display: flex;
      flex-direction: column-reverse;
    }

    .hero-section {
      text-align: center;
      padding-top: 80px;
    }

    .cta-group {
      justify-content: center;
    }

    .profile-image {
      width: 280px;
      height: 280px;
    }

    .glow-effect {
      width: 290px;
      height: 290px;
    }
  }

  /* Project Images */
  .project-img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: transform 0.3s ease;
  }

  .glass-card:hover .project-img {
    transform: scale(1.02);
  }
</style>
